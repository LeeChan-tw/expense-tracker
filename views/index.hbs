<div class="container">
  <div class="input">
    <form action="/sort" method="GET">
      <select name="sort" class="form-control btn-outline-secondary" id='inputType' onchange="this.form.submit()"
        style="cursor: pointer; text-align: center; text-align-last: center">
        <option selected value="all">所有支出類別</option>
        {{#each categories}}
        <option {{#ifcond ../this.sort "===" this.category}}selected{{/ifcond}} value={{this.category}}>
          {{this.category}}</option>
        {{/each}}
      </select>
    </form>
  </div>
  <div class="d-flex align-items-start justify-content-center">
    <h4>總金額</h4>
    <h1 class="text-warning">{{ sum }}</h1>
  </div>
  <div class="">
    <ul class="list－group">
      {{#each records}}
      <li class="list-group-item">
        <div class="row">
          <div class="col-8">
            <span style="display: inline; vertical-align: middle;width:50px;height:auto;">
              {{#each ../categories}}
              {{#ifcond ../this.category "===" this.category}}<i class="{{this.icon}}"></i>{{/ifcond}}
              {{/each}}
            </span>
            <h4 style="display: inline; vertical-align: middle;">{{this.name}}</h4>
            {{this.date}}
            <h5 class="text-warning">{{this.amount}}</h5>
          </div>
          <div class="col-4 bg-light" style="display: inline; vertical-align: middle;">
            <a class="btn btn-primary" href="./records/{{ this._id }}/edit">改一下</a>
            <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline">
              <button class="btn btn-danger" type="submit">擦掉</button>
            </form>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
  <div class="d-flex justify-content-center col-auto p-1">
    <a class="btn btn-info" href="./records/new">哎呀，又破財惹</a>
  </div>
</div>